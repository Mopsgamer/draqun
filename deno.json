{
    "nodeModulesDir": "auto",
    "tasks": {
        "init": "deno run --allow-read --allow-write init.ts; deno task build",
        "serve": "go run .",
        "serve:build": "deno task serve --build",
        "serve:watch": "deno task serve --watch",
        "build": "deno run --allow-write --allow-net=deno.land,registry.npmjs.org --allow-sys --allow-env --allow-read --allow-run ./build.ts",
        "watch": "deno task build --watch"
    },
    "imports": {
        "@luca/esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.11.0",
        "@shoelace-style/shoelace": "npm:@shoelace-style/shoelace@^2.18.0",
        "@std/fs": "jsr:@std/fs@^1.0.5",
        "@std/path": "jsr:@std/path@^1.0.8",
        "esbuild": "npm:esbuild@^0.24.0",
        "esbuild-plugin-copy": "npm:esbuild-plugin-copy@^2.1.1",
        "esbuild-plugin-tailwindcss": "npm:esbuild-plugin-tailwindcss@^1.2.1",
        "htmx.org": "npm:htmx.org@^1.9.12",
        "tailwindcss": "npm:tailwindcss@^3.4.14"
    },
    "fmt": {
        "indentWidth": 4
    },
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "dom.asynciterable",
            "deno.ns"
        ]
    }
}
