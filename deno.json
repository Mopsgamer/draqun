{
    "name": "@m234/draqun",
    "version": "0.0.0",
    "nodeModulesDir": "auto",
    "tasks": {
        "init": "deno run -A scripts/init.ts",
        "dev": "deno run -A scripts/dev.ts",
        "compile:client": "deno run -A scripts/compile-client.ts",
        "compile:server": "deno run -A scripts/compile-server.ts",
        "compile:server:cross": "deno run -A scripts/compile-server-cross.ts",
        "release": "deno run -A scripts/release.ts"
    },
    "imports": {
        "@luca/esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.11.1",
        "@m234/logger": "jsr:@m234/logger@^2.0.0",
        "@octokit/rest": "npm:@octokit/rest@^22.0.0",
        "@shoelace-style/shoelace": "npm:@shoelace-style/shoelace@^2.20.1",
        "@std/fmt": "jsr:@std/fmt@^1.0.8",
        "@std/fs": "jsr:@std/fs@^1.0.19",
        "@std/path": "jsr:@std/path@^1.1.2",
        "@std/semver": "jsr:@std/semver@^1.0.5",
        "@tailwindcss/postcss": "npm:@tailwindcss/postcss@^4.1.12",
        "dotenv": "npm:dotenv@^17.2.1",
        "esbuild": "npm:esbuild@^0.25.9",
        "esbuild-plugin-copy": "npm:esbuild-plugin-copy@^2.1.1",
        "esbuild-plugin-tailwindcss": "npm:esbuild-plugin-tailwindcss@^2.1.0",
        "htmx-ext-debug": "npm:htmx-ext-debug@^2.0.1",
        "htmx-ext-ws": "npm:htmx-ext-ws@2.0.3",
        "htmx.org": "npm:htmx.org@^2.0.6",
        "is-ci": "npm:is-ci@^4.1.0",
        "mysql2": "npm:mysql2@^3.14.3",
        "p-limit": "npm:p-limit@^7.1.1",
        "tailwindcss": "npm:tailwindcss@^4.1.12",
        "tree-kill": "npm:tree-kill@^1.2.2"
    },
    "exports": {},
    "exclude": [
        "dist/static",
        "client/src/*tailwind*"
    ],
    "fmt": {
        "indentWidth": 4
    },
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "dom.asynciterable",
            "deno.ns"
        ]
    }
}
