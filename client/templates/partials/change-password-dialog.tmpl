<sl-dialog label="Dialog" id="change-password-dialog">
    <span slot="label" class="aligned">
        <sl-icon name="lock-fill"></sl-icon>
        Change password
    </span>
    <form
        id="change-password-form"
        name="change-password-form"
        hx-put="/account/change/password"
        hx-swap="innerHTML"
        hx-target="#change-password-error"
    >
        <sl-input
            autofocus
            label="Current password"
            type="password"
            id="current-password"
            name="current-password"
            required
            password-toggle
        >
        <sl-icon slot="show-password-icon" name="eye-fill"></sl-icon>
        <sl-icon slot="hide-password-icon" name="eye-slash-fill"></sl-icon>
        </sl-input>

        <sl-input
            label="New password"
            type="password"
            autocomplete="new-password"
            id="new-password"
            name="new-password"
            required
            password-toggle
        >
        <sl-icon slot="show-password-icon" name="eye-fill"></sl-icon>
        <sl-icon slot="hide-password-icon" name="eye-slash-fill"></sl-icon>
        </sl-input>
        <sl-input
            label="Confirm new password"
            type="password"
            autocomplete="off"
            id="confirm-new-password"
            name="confirm-password"
            required
            password-toggle
        >
        <sl-icon slot="show-password-icon" name="eye-fill"></sl-icon>
        <sl-icon slot="hide-password-icon" name="eye-slash-fill"></sl-icon>
        </sl-input>
        <div id="change-password-error"></div>
    </form>
    <div slot="footer" class="dialog-footer">
        <div>
            <sl-button
                form="change-password-form"
                variant="primary"
                type="submit"
            >Change password</sl-button>
        </div>
    </div>
</sl-dialog>
