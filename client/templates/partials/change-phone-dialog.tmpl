<sl-dialog label="Dialog" id="change-phone-dialog">
    <span slot="label" class="aligned">
        <sl-icon name="telephone-fill"></sl-icon>
        Change phone
    </span>
    <form
        id="change-phone-form"
        name="change-phone-form"
        hx-put="/account/change/phone"
        hx-swap="innerHTML"
        hx-target="#change-phone-error"
    >
        <sl-input
            autofocus
            label="Current password"
            type="password"
            id="change-phone-current-password"
            name="current-password"
            required
            password-toggle
        >
        <sl-icon slot="show-password-icon" name="eye-fill"></sl-icon>
        <sl-icon slot="hide-password-icon" name="eye-slash-fill"></sl-icon>
        </sl-input>
        <sl-input
            label="New phone"
            type="tel"
            id="new-phone"
            name="new-phone"
            inputmode="tel"
        >
        </sl-input>
        <div id="change-phone-error"></div>
    </form>
    <div slot="footer" class="dialog-footer">
        <div>
            <sl-button form="change-phone-form" variant="primary" type="submit"
            >Change phone</sl-button>
        </div>
    </div>
</sl-dialog>
