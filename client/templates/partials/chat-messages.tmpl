{{- $this := . -}}
{{- range $i, $message := $this.MessageList -}}
{{- if and (eq $i 0) (eq (len $this.MessageList) $this.MessagesPagination) -}}
<div
    class="load-scroll"
    hx-trigger="intersect once"
    hx-swap="outerHTML"
    hx-get="/groups/{{$this.Group.Id}}/messages/page/{{add 1 $this.MessagesPage}}"
>
</div>
{{- end -}}

<div
    id="message-{{$message.Id}}"
    class="message"
    data-message="{{$message.Id}}"
    data-is-self="{{eq $message.AuthorId $this.User.Id}}"
    data-author="{{$message.AuthorId}}"
    data-created-at="{{- jsonTime $message.CreatedAt.Value}}"
>
    <div class="header">
        <div class="prefix">
            <sl-avatar class="avatar" style="--size: 2rem"></sl-avatar>
            <span class="moniker">{{$message.Author.Moniker}}</span>
        </div>
        <div class="suffix">
            <sl-format-date
                class="date"
                hour="numeric"
                minute="numeric"
                year="numeric"
                month="long"
                day="numeric"
                date="{{jsonTime $message.CreatedAt.Value}}"
            ></sl-format-date>
        </div>
    </div>
    <div class="text">{{$message.Content}}</div>
    <!-- use <area> if you implementing hyperlink previews -->
</div>
{{- end}}
