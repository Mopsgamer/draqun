<main id="app-content" class="centered-main">
    <div class="gap-5 flex flex-col items-center">
        <sl-avatar shape="rounded" style="--size: 5rem">
            <sl-icon slot="icon" name="people-fill"></sl-icon>
        </sl-avatar>
        {{- with .Group.Description -}}
        <div class="description">{{.}}</div>
        {{- end -}}
        <div class="question">Join to {{.Group.Moniker}} group?</div>
        <div class="aligned answers" hx-target="#error-group-join">
            <sl-button
                variant="success"
                outline
                hx-put="/groups/{{.Group.Id}}/join"
            >
                <sl-icon name="person-plus-fill" slot="prefix"></sl-icon>
                Join
            </sl-button>
            <sl-button variant="danger" outline href="/chat">
                <sl-icon name="house-fill" slot="prefix"></sl-icon>
                Stay
            </sl-button>
        </div>
        <div id="error-group-join"></div>
    </div>
</main>
